<%- include('../includes/header') %>

<!-- Logo site -->
<a href="http://localhost:8000"><img src="/images/logo.png" class="rounded mx-auto d-block" alt=""></a>

<!-- Button upload file -->
<div class="btn" style="display: inline;" id="uploadFileBtn">
  <button type="button" class="btn btn-secondary btn-lg" id="uploadBtn">Качи файл</button>
</div>

<!-- File -->
<input type="file" name="myfile" class="btn btn-secondary" style="display:none"/>

<!-- Мodal window msg "The file exceeds the allowed size" -->
<div class="modal" tabindex="-1" role="dialog" id="modalWindow">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Невъзможно качване</h5>
      </div>
      <div class="modal-body">
        <p>Файлът който се опитвате да качите е с големина над 20MB.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="closeModal">ОК</button>
      </div>
    </div>
  </div>
</div>

<!-- Message "maximum size" -->
<p class="text-center" id="msg">Максимален размер: 20MB</p>

<!-- Progress-bar -->
<div class="progress" style="display:none;">
  <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
</div>

<!-- Copy URL to download the file -->
<input type="text"  class="hide" value="2" style="display: none;" id="fileUrlDownload"/><br>

<!-- The button used to copy the text -->
<button type="button" class="btn btn-secondary" style="display: none;" id="btnCopy" title="Кликни за да копираш линка">Копирай URL от тук</button>

<%- include('../includes/footer') %>

